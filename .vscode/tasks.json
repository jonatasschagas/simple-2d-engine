{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "mkdir",
            "command": "mkdir",
            "args": [
                "-p",
                "build/osx"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "copy-assets",
            "command": "cp",
            "args": [
                "-r",
                "${workspaceFolder}/projects/assets",
                "${workspaceFolder}/build/osx/"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "cmake",
            "command": "cmake",
            "args": [
                "${workspaceFolder}/projects/osx-opengl-backend/"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/osx/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "mkdir",
                "copy-assets"
            ]
        },
        {
            "type": "shell",
            "label": "make",
            "command": "make",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/build/osx/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "cmake"
        }
    ]
}